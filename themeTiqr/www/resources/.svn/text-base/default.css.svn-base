.clearfix:after, div.sidebar ul li:after, .sidebar ul li form#searchform:after {
    content: "."; 
    display: block; 
    height: 0; 
    clear: both; 
    visibility: hidden;
}

/* Hides from IE-mac and IE-win \*/
* html .clearfix, div.sidebar ul li, .sidebar ul li form#searchform {height: 1%;}
/* End hide from IE-mac and IE-win */

form#commentform p input#submit {
	width:100px;
	float:left;
	display:block;
	height:23px;
	margin:0;
	padding:2px 0;	
	color:#fff;
	border:none;
	background: url(images/search.gif) repeat-x;
	}
	

form#commentform { 
	padding:0 0 30px 0;
	margin: 0 0 0 -7px;
	}


input#submit
{
	width:50px;
	float:right;
	margin:-23px 10px 10px 0;
	padding: 0 0 0 0;
	height: 23px;
	background:url(images/search.gif) repeat-x;
	color:#fff;
	border:none;
}

