body, h1, h2, h3, h4, h5, h6, address, blockquote, dd, dl, hr, p, form{
	margin: 0;
	padding: 0;
}

body{
	font-family: Verdana, Geneva, sans-serif;
	font-size: 12px;
	color: #000;
	background:url(bck_theme.gif) repeat-x black;
}

table{
	font-family: Verdana, Arial, Helvetica, Georgia, Sans-serif;
	font-size: 12px;
}

h1, h2, h3, h4, h5, h6{
	font-family: Arial, Helvetica, Georgia, Sans-serif;
	font-size: 18px;
	font-weight: normal;
}

a{
	
	color: #8EAA40;
	text-decoration:none;
}

a:hover{
	text-decoration: underline;
}

a img{
	border: 0;
}

address, dl, p{
	padding: 10px 0 5px;
}

blockquote{
	margin: 10px 0 0;
	border-top: 1px solid #ddd;
	background: #f7f7f7;
}

blockquote p{ padding: 10px; }

blockquote blockquote{
	margin: 0 10px;
	background: #fff;
}

code{
	background: #f9f9f9;
}

dd{
	padding: 0 0 0 20px;
}

p img{
	max-width: 100%;
}

img.centered{
	display: block;
	margin-left: auto;
	margin-right: auto;
}

img.alignright{
	padding: 4px;
	margin: 3px 0 2px 10px;
	display: inline;
}

img.alignleft{
	padding: 4px;
	margin: 3px 10px 2px 0;
	display: inline;
}

.alignleft{
	float: left;
}

.alignright{
	float: right;
}

.clear{
	margin: 0;
	padding: 0;
	clear: both;
}

small{
	font-size: 11px;
}

input, textarea{
	font-family: Arial, Helvetica, Georgia, sans-serif;
	font-size: 12px;
	padding: 2px;
}


#container{
	margin: 0 auto;
	width: 1000px;
	text-align: left;
	vertical-align: top;

}


#header_wrap{
	float: left;
	width: 980px;
}

#header{
	float: left;
	width: 1000px;
	padding-bottom:50px;
	background:url(header_bck.png) no-repeat bottom left ;
	position:relative;
}


#header h1{
	padding:0;
	margin:15px 0 0 15px;
	font-family: Arial, Helvetica;
	font-size: 100px;
	font-weight: normal;
	color: #ffffff;
	background:url(tiqr_logo.png) left 13px no-repeat;
}
#header h1 span {visibility:hidden;}
#header h1 a{
	text-decoration: none;
	color: #fff;
}

#header h2 {
		font-family: Arial, Helvetica;
/*		font-style:italic;*/
		font-weight: normal;
		font-size: 18px;
		margin:0 0 0 35px;
		color:#FFF;
		}

/*#header a:hover{
	text-decoration: underline;
}
*/
.topmenu{
	position:absolute;
	bottom:0;
	width: 1000px;
	height:28px;
}

.topmenu ul{
	list-style-type: none;
	margin:0;
	padding:0 0 0 15px;	
	height:28px;
}

.topmenu ul li{
	float: left;
	display: inline;
	margin:0 20px 0 0;
	padding:0 10px 0 0;
	height:28px;
	background:url(bck_header_li.png) repeat ;
}

.topmenu ul li.current_page_item {
	background:url(bck_header_li_current.png) repeat-x;
}


.topmenu ul li a{
	display: block;
	height: 28px;
	text-decoration: none;
	color:white;
	outline:none;
	margin:0;
	padding: 6px 0 0 10px;
	font-weight:bold;
}

.topmenu ul li.current_page_item a{
	color: white;
}


.topmenu ul li a:hover{
	text-decoration: underline;
}

.topmenu ul li.rss{
	float: right;
	margin:0 -10px 0 0;
	width: 65px;
	display: block;
	background:none;
}

.topmenu ul li.rss a{
	padding: 0 0 0 20px;
	background: url(icon_rss.gif) no-repeat;
	font-weight: bold;
	width: 90px;
	color: #fff;
}


#page{
	float: left;
	width: 1000px;
	margin: 0;
	padding: 0;
	background:url(bck_content.png) ;
}

.main{
	float: left;
	width: 955px;
	display: inline;
	margin: 5px 0 0 15px;
}

.post{
	background: #fff;
	float: left;
	width: 950px;
	margin: 10px 0 10px 0;
	padding: 5px 10px 0 10px;
	overflow: hidden;
}

.post_date{
	width: 45px;
	height: 50px;
	background:url(bg_date_button.jpg) no-repeat left top;
	margin:10px 10px 0 0;
	float:left;
}

.post_month{
	padding: 3px 0 0;
	text-align: center;
	font-family:Arial, Helvetica, Sans-serif;
	font-size: 11px;
	color: #ffffff;
}

.post_day{
	padding: 4px 0 0;
	text-align: center;
	font-family:Arial, Helvetica, Sans-serif;
	font-size: 16px;
	font-weight: bold;
	color: #000000;
}

div.postdata{
	font-family: Arial, Helvetica, Georgia, Sans-serif;
	color: #999;
	float:left;
	margin:20px 0 0 0;
}


div.post_title{
	margin:-10px -10px 0 -10px;
	padding:0;
}

.post_title_alt{
	width: 470px;
	margin: 20px 0 0 20px;
}

.post_title h2{
	font-size: 14px;
	color:#FFF;
	font-weight: bold;
	background:url(bck_h2.png);
	width: 963px;
	padding:7px 0 7px 10px;
	margin: 5px 0 0 0;
	text-transform: uppercase;
}

.post_title h2 a{
	text-decoration: none;
	color: #ffffff;
}

.post_title h2 a:hover{
	text-decoration: underline;
}


.entry{
	padding:0 10px 20px 2px;
	line-height: 20px;
	clear: both;
}

.entry h1, .entry h2, .entry h3, .entry h4, .entry h5, .entry h6{
	margin: 0;
	padding: 10px 0 5px 0;
	background-color: transparent;
	background-image: none;
	font-weight: bold;
}

.entry h1{
	font-size: 24px;
	line-height: 30px;
	font-weight: normal;
}

.entry h2{
	font-weight: normal;
}

.entry h3{}

.entry h4{
	font-size: 14px;
}

.entry h5{
	font-size: 12px;
}

.entry h6{
	font-size: 11px;
}

p.comments_number{
	padding: 13px 0 5px 25px;
	background: url(images/icon_comment_bubble.gif) no-repeat 0 16px;
}

p.comments_number a{
/*	color: #c41a22;*/
}

.navigation{
	padding: 0 20px;
	line-height: 24px;
	display:none;
}


.comments_template_wrap{
	background-color:white;
	padding-top:20px;
	margin-top:10px;
	width: 620px;
}

.comments_template{
	width: 620px;
}

.comments_template ol.commentlist{
	list-style-type: none;
	margin:10px 10px 0 10px;
	padding:5px 10px 5px 10px;
	width:575px;
}

.comments_template ol.commentlist li{
	padding: 10px;
	line-height: 24px;
	background:#f1f1f1;
	margin:10px 0;
}

.comments_template ol.commentlist li p { margin:0;}

.comments_template ol.commentlist li.alt{
	background:#ebebeb;
}

.comments_template ol.commentlist li cite{
	font-style: normal;
	font-weight: bold;
}

.comments_template h3 { 
	margin:-20px -10px 0 0; 
	padding: 7px 0 7px 7px; 
	width: 613px;
	font-weight: bold;
	font-size:14px;
	color: #fff;
	text-transform: uppercase;
	background:url(bck_h2.png);
}

.comments_template p { margin-left:20px;}

.sidebar{
	float: right;
	width: 335px;
	margin: 0 5px 0 0;
	padding: 10px 10px 0 10px;
	display: none;
}

.sidebar ul{
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.sidebar ul li{
	margin: 5px 0 20px 0;
	padding: 10px;
	background-color:white;
}

.sidebar ul li#calendar #calendar_wrap{
	padding: 7px 20px 30px;
	background: url(images/bg_sidebar_rc_bottom.gif) no-repeat left bottom;
	border: none;
}

.sidebar ul li#calendar #calendar_wrap table#wp-calendar{
	width: 100%;
	font-size: 12px;
	border: none;
}

.sidebar ul li#calendar #calendar_wrap table#wp-calendar td{
	padding: 4px 0;
	border: none;	
}

.sidebar ul li#search{
	padding: 10px 0 0 0;
	background:url(images/bck_search.png);
}

.sidebar ul li form#searchform{	
	padding: 0 0 0 10px ;
}

.sidebar ul li form#searchform .keyword{
	width: 230px;
	overflow: hidden;
}

.sidebar ul li form#searchform .keyword input#s{
	border: 0;
	width: 220px;
	margin-top: 0;
	padding-top:4px;
	padding-left:3px;
	font-family: Arial, Helvetica, Sans-serif;
	font-size: 11px;
	background-color: white;
	border: 1px solid #878787;
	color: #666;
	
}

.sidebar ul li h2{
	padding: 6px 10px;
	margin:-10px -10px 0 -10px;
	color: #ffffff;
	background:url(images/bck_h2.png);
	display:block;
	height:19px;
	font-weight: bold;
	font-size:14px;
	text-transform:uppercase;
	border: none;	
}

.sidebar ul ul,  .sidebar ul li#google-search form#gsearch, .widget_tag_cloud div, .widget_calendar div {
	border: none;
}

.widget_tag_cloud div a { padding-right:5px;}


.sidebar ul ul li{
	margin: 10px 0 0 0;
	padding:0;
	background:none;
	border: none;	
}
.sidebar ul li ul{
	border: none;
	margin: 5px 0 0 0;
}

.sidebar ul ul li a { 
	display:inline-block;
	outline:none;
	background:url(images/arrow.gif) no-repeat left top; 
	padding: 0 0 0 15px;
	border: none;
}

.sidebar ul ul ul{
	padding: 0;
	background-image: none;
	border: none;
}


.sidebar ul ul ul li{
	padding: 0 0 0 10px;
	background-color: transparent;
	background-image: none;
	border: none;
}


li.widget_recent_comments ul#recentcomments li.recentcomments a{
	background:none;
	background-image:none;
	border: none;
}

.navigation a, #footer a{
	text-decoration: none;
	border: none;

}

.navigation a:hover, #footer a:hover{
	text-decoration: underline;
}

.navigation, #footer{
	font-weight: bold;
	color: #a7d5e8;
}

#footer{
	background:url(images/bck_content.png);
	width: 1000px;
	margin-bottom:20px;
	height:60px;
	color:#000; font-weight:normal;
	float:left;
}
#footer div#logo a{
	background:url(surfnet_logo.png) no-repeat;
	width:70px;
	height:40px;
	margin-top:15px;
	margin-left:15px;
	float:left;
	color:#646363;
}

#footer p {
	margin-top:13px;
	padding-left:10px;
	font-size:10px;
	color:#646363;
}
#footer p a {	color:#646363;}

